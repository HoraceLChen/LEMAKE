<div class="container-body">
  <div class="title-card mb-4">
    <%= image_tag "logo.png", class: "small-logo" %>
    <h2 class="mt-2 mb-2">Here is what I've found for you!</h2> <%= image_tag "logo.png", class: "small-logo" %>
  </div>

  <% @recipes.each do |recipe| %>
    <div class="card-recipe">
      <div class="card-recipe-image" style="background-image: url('<%= recipe.image %>');">
        <div class="like-container" data-controller="favourites">
          <%= link_to("#", class: "like", data: {
            url: favourite_toggle_meal_path(id: @meal, recipe: recipe),
            favourites_target: "favouriteLink",
            action: "favourites#toggle"
          }) do %>
            <i class="fa <%= current_user.favorited?(recipe) ? 'fa-solid fa-heart' : 'fa-regular fa-heart' %>"></i>
          <% end %>
        </div>
      </div>
      <div class="card-recipe-infos my-4">
        <div class="flex d-flex justify-content-evenly">
          <p><i class="fa-solid fa-plate-wheat me-2"></i><%= recipe.cuisine %></p>
          <p><i class="fa-solid fa-user-group me-2"></i><%= recipe.people %></p>
          <p><i class="fa-regular fa-clock me-2"></i><%= recipe.time %>min</p>
        </div>
        <div class="flex d-flex justify-content-evenly">
          <h4 class="ms-2 me-2"><%= recipe.title %></h4>
          <%= link_to("COOK", save_recipe_meal_path(@meal, recipe: recipe), class: "btn btn-success me-2", data:{turbo_method: :patch}) %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= render "shared/navbar" %>
