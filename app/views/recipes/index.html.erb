<div class=container>
  <h2 class="d-flex justify-content-center align-items-center mt-3">Here is recipes!</h2>
  <% @recipes.each do |recipe| %>
    <div class="card-recipe">
      <img src=<%= recipe.image %> />
      <div class="card-recipe-infos my-4">
        <h2><%= recipe.title %></h2>
        <p><i class="fa-solid fa-plate-wheat me-2"></i><%= recipe.cuisine %></p>
        <p><i class="fa-solid fa-pen me-2"></i><%= recipe.content %></p>
        <div class="flex d-flex justify-content-evenly">
          <p><i class="fa-solid fa-user-group me-2"></i><%= recipe.people %></p>
          <p><i class="fa-regular fa-clock me-2"></i><%= recipe.time %>hrs.</p>
        </div>
        <div class="d-flex justify-content-center align-items-center" data-controller="favourites">
          <%= link_to("See recipe", meal_recipe_path(@meal, recipe), class: "btn btn-outline-warning") %>
          <%= link_to(current_user.favorited?(recipe) ? "Unfavourite" : "Favourite","#", class: "btn btn-outline-warning", data: {url: favourite_toggle_meal_path(id: @meal, recipe: recipe), favourites_target: "favouriteLink", action: "favourites#toggle" }) %>
        <%# , favourites_target: "button", action: "favourites#select"  %>
        </div>
      </div>
    </div>
  <% end %>
</div>
