<div class="container-body" data-controller="pantry-modal" data-empty-value="<%=@pantry.blank?%>">
  <div class="title-card">
    <div>
    <h2 class="lemon-title mt-2 mb-2">Hi Sam!</h2>
    <p>Welcome back! <br> What shall we cook today?</p>
    </div>
    <div>
    <%= image_tag "logo.png", class: "small-logo" %>
    </div>
  </div>
  <div>
    <%= render partial: "shared/menu-title", locals: { title: "I want something quick" } %>
    <%= render "shared/quick_recipes"%>
  </div>
  <div>
    <%= render partial: "shared/menu-title", locals: { title: "Top recipies this week!" } %>
    <%= render "shared/recipe_card" %>
  </div>
  <div>
    <%= render partial: "shared/menu-title", locals: { title: "Your leftover ingredients" } %>
    <div class="leftovers d-flex align-items-center ">
      You have no leftover ingredients!
    </div>
  </div>
  <div>
    <%= render partial: "shared/menu-title", locals: { title: "Recommended for you" } %>
   <div class="recipe-card">
  <div class="recipe-card-image" style="background-image: linear-gradient(rgba(255, 255, 255, 0) 50%, #11111182), url('<%= "#{@recipe.image}" %>');">
    <div class="like-count">
      <i class="fa-solid fa-heart"> <%= rand(50..2473) %></i>
      </div>
      <%# <div class="d-flex align-items-start">
        <%# <%= link_to "COOK", bookmarks_user_path(current_user, recipe: @recipe), data:{turbo_method: :post}, class: "btn btn-success" %>
      <%# </div> %>

    <div class="recipe-card-infos">
      <h5><%= @recipe.title %></h5>
          <div class="flex d-flex justify-content-between mx-3">
            <p><i class="fa-solid fa-list-check"></i> <%= @recipe.steps.length %> steps</p>
            <p><i class="fa-solid fa-user-group me-2"></i><%= @recipe.people %></p>
            <p><i class="fa-regular fa-clock me-2"></i><%= @recipe.time %>min</p>
          </div>
        </div>

  </div>
  <%= link_to "", bookmarks_user_path(current_user, recipe: @recipe), data:{turbo_method: :post}, class: "card-link" %>
</div>
  </div>
  <div class="modal" id="pantryModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Uh oh! Your Pantry is Currently Empty!</h5>
        <%# <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> %>
      </div>
      <div class="modal-body">
        <p>Get the most out of Le Make by setting up your digital pantry now! Add ingredients you usually have on hand - like butter, milk, eggs, olive oil, or spices </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="window.location.href='<%= pantry_user_path(current_user) %>'">Go to Pantry</button>
      </div>
    </div>
  </div>
</div>
</div>
  <%= render "shared/navbar" %>
